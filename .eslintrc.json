{
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "jest",
    "filenames"
  ],
  "root": true,
  "rules": {
    "strict": "error",
    "jest/no-focused-tests": "error",
    "camelcase": "error",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": [
      "error"
    ],
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 160,
        "tabWidth": 2,
        "endOfLine": "auto"
      }
    ],
    "@typescript-eslint/no-explicit-any": [
      "error"
    ],
    "@typescript-eslint/no-unused-vars": [
      "error"
    ]
  },
  "env": {
    "node": true,
    "es2021": true
  }
}
